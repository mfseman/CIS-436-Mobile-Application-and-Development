<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marco.slot_machine_cis436.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/slot3Result"
        android:layout_width="82dp"
        android:layout_height="81dp"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textCapCharacters|textPostalAddress"
        android:singleLine="true"
        android:text="#"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/pullLever"
        app:layout_constraintTop_toBottomOf="@+id/newGame"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="33dp"
        app:layout_constraintLeft_toRightOf="@+id/slot2Result"
        android:layout_marginLeft="33dp" />

    <Button
        android:id="@+id/setValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Value"
        app:layout_constraintRight_toLeftOf="@+id/bankAmount"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/userAmount"
        android:layout_marginRight="4dp" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/setValue"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/setValue"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/setValue"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/amountText"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="Amount:"
        app:layout_constraintRight_toLeftOf="@+id/userAmount"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/setValue"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintTop_toTopOf="@+id/bankAmount"
        android:layout_marginRight="6dp" />

    <Button
        android:id="@+id/pullLever"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:text="Pull Lever"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="84dp" />

    <EditText
        android:id="@+id/userAmount"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:ems="10"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="@+id/bankAmount"
        android:layout_marginTop="85dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/setValue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="23dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/bankAmount"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:text="$$$"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/userAmount"
        android:layout_marginEnd="86dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="86dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/ProgrammerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marco Seman"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/slot2Result"
        android:layout_width="82dp"
        android:layout_height="81dp"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textCapCharacters|textPostalAddress"
        android:singleLine="true"
        android:text="#"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/pullLever"
        app:layout_constraintTop_toBottomOf="@+id/newGame"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/pullLever"
        app:layout_constraintLeft_toLeftOf="@+id/pullLever" />

    <EditText
        android:id="@+id/slot1Result"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textCapCharacters|textPostalAddress"
        android:singleLine="true"
        android:text="#"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/pullLever"
        app:layout_constraintTop_toBottomOf="@+id/newGame"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/setValue"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

</android.support.constraint.ConstraintLayout>
